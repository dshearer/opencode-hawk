{
  "name": "opencode-hawk",
  "version": "0.1.0",
  "description": "Plugin for OpenCode that lets AI model activity to be monitored and controlled",
  "author": {
    "name": "C. Dylan Shearer",
    "email": "dylan@nekonya.info"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dshearer/opencode-hawk.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src/version.ts"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "dependencies": {
    "@dshearer/modelhawk": "^0.1.0",
    "@opencode-ai/plugin": "^1.2.10",
    "@protobuf-ts/grpc-transport": "^2.11.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "bun-types": "^1.3.9",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  }
}